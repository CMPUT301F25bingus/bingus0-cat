<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EventMaster Test Menu"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/seed_data_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seed Test Data"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/title_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/test_event1_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test: Swimming Lessons"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/seed_data_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/test_event2_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test: Piano Lessons"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/test_event1_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/test_event3_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Test: Dance Class"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/test_event2_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/view_event_list_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Event List (US #8)"
        android:padding="16dp"
        app:backgroundTint="#3D8B87"
        app:layout_constraintTop_toBottomOf="@id/test_event3_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/admin_browse_events_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Admin Browse Events (US #45)"
        android:padding="16dp"
        app:backgroundTint="#9C27B0"
        app:layout_constraintTop_toBottomOf="@id/view_event_list_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/scan_qr_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“· Scan QR Code (US #20)"
        android:padding="16dp"
        app:backgroundTint="#FF5722"
        app:layout_constraintTop_toBottomOf="@id/admin_browse_events_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>