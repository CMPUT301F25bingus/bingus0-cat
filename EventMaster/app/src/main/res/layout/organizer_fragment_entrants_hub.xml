<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5EC1B6">

    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TOP BAR -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B8D9D8"
                android:padding="16dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Back to Manage Event"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


            <!-- MAIN CONTENT -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- PAGE TITLE -->
                <TextView
                    android:id="@+id/titleViewEntrants"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="View Entrants"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="#B8D9D8"
                    android:layout_marginBottom="20dp"
                    app:layout_constraintWidth_default="spread"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- BUTTON COLUMN -->
                <LinearLayout
                    android:id="@+id/button_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/titleViewEntrants">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnWaitingList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“‹ Waiting List"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        app:cornerRadius="16dp"
                        app:strokeWidth="1dp"
                        android:layout_marginBottom="16dp"
                        app:strokeColor="#AA000000"
                        app:backgroundTint="#E8F0FF"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnChosenList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¯ Chosen List"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        app:cornerRadius="16dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#AA000000"
                        app:backgroundTint="#FFF3D4"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnFinal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âœ… Enrolled Entrants"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        app:cornerRadius="16dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#AA000000"
                        app:backgroundTint="#D0EDD7"
                        android:layout_marginBottom="16dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCancelled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="âŒ Cancelled Entrants"
                        android:textAllCaps="false"
                        android:textColor="#000"
                        app:cornerRadius="16dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="#AA000000"
                        app:backgroundTint="#F2DFD8" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <!-- OVERLAY -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/transparent" />

</FrameLayout>
