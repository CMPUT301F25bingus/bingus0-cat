<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/organizer_bg_gradient">

    <!-- MAIN CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TOP BAR -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/org_card"
                android:padding="16dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Manage Entrants"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/org_text_primary"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- MAIN CONTENT -->
            <LinearLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Subtitle -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View and manage all participant groups."
                    android:textSize="14sp"
                    android:textColor="@color/org_text_secondary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="20dp" />

                <!-- Total Participants Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/totalParticipantsCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/org_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Participants"
                            android:textSize="16sp"
                            android:textColor="@color/org_text_secondary"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:id="@+id/totalParticipantsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="32sp"
                                android:textStyle="bold"
                                android:textColor="@color/org_text_primary" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" people"
                                android:textSize="16sp"
                                android:textColor="@color/org_text_secondary"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Waiting List Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnWaitingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/org_card"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_recent_history"
                            android:contentDescription="Waiting List"
                            android:background="@drawable/circle_shape"
                            android:padding="10dp"
                            app:tint="@color/org_accent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Waiting List"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/org_text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="People waiting to be selected for the event."
                                android:textSize="13sp"
                                android:textColor="@color/org_text_secondary" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/waitingListCount"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/organizer_count_badge"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Chosen Entrants Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnChosenList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/org_card"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_compass"
                            android:contentDescription="Chosen Entrants"
                            android:background="@drawable/circle_shape"
                            android:padding="10dp"
                            app:tint="@color/org_accent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Chosen Entrants"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/org_text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Selected participants pending confirmation."
                                android:textSize="13sp"
                                android:textColor="@color/org_text_secondary" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/chosenListCount"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/organizer_count_badge"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Enrolled Entrants Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/org_card"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_people"
                            android:contentDescription="Enrolled Entrants"
                            android:background="@drawable/circle_shape"
                            android:padding="10dp"
                            app:tint="@color/org_accent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Enrolled Entrants"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/org_text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confirmed participants attending the event."
                                android:textSize="13sp"
                                android:textColor="@color/org_text_secondary" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/enrolledCount"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/organizer_count_badge"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Cancelled Entrants Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/btnCancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/org_card"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@android:drawable/ic_menu_close_clear_cancel"
                            android:contentDescription="Cancelled Entrants"
                            android:background="@drawable/circle_shape"
                            android:padding="10dp"
                            app:tint="@color/org_accent" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_marginStart="16dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cancelled Entrants"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="@color/org_text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Participants who cancelled their registration."
                                android:textSize="13sp"
                                android:textColor="@color/org_text_secondary" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/cancelledCount"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="@drawable/organizer_count_badge"
                            android:gravity="center"
                            android:text="0"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/white" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- OVERLAY -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@android:color/transparent" />

</FrameLayout>
