<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.organizer.OrganizerCreateEventActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <EditText
            android:id="@+id/editTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Event title"
            android:inputType="textCapSentences"
            android:maxLines="1"
            android:minHeight="48dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <!-- Description -->
        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:minHeight="48dp"
            android:gravity="top|start"
            android:layout_marginTop="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <!-- Location -->
        <EditText
            android:id="@+id/editLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Location"
            android:inputType="textCapWords"
            android:maxLines="1"
            android:minHeight="48dp"
            android:layout_marginTop="12dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <!-- Registration Open (click to pick) -->
        <TextView
            android:id="@+id/tvRegOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reg Open: pick date and time"
            android:padding="14dp"
            android:minHeight="48dp"
            android:layout_marginTop="16dp"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true"/>

        <!-- Registration Close (click to pick) -->
        <TextView
            android:id="@+id/tvRegClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reg Close: pick date and time"
            android:padding="14dp"
            android:minHeight="48dp"
            android:layout_marginTop="8dp"
            android:background="?attr/selectableItemBackground"
            android:focusable="true"
            android:clickable="true" />

        <!-- Publish -->
        <Button
            android:id="@+id/btnPublish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publish"
            android:minHeight="48dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>
</ScrollView>


