<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="72dp"
    android:orientation="horizontal" android:paddingStart="12dp"
    android:paddingEnd="8dp" android:gravity="center_vertical">

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="40dp" android:layout_height="40dp"
        android:src="@drawable/ic_prof_avatar" android:contentDescription="@string/app_name" />

    <LinearLayout
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_marginStart="12dp" android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Organization / Name" android:textSize="15sp" android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="email@example.com" android:textSize="13sp" android:alpha="0.8" />

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="+1 (555) 000-0000" android:textSize="13sp" android:alpha="0.8" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnOpen"
        android:layout_width="32dp" android:layout_height="32dp"
        android:src="@drawable/ic_chevron_right" android:contentDescription="@string/app_name" />
</LinearLayout>
