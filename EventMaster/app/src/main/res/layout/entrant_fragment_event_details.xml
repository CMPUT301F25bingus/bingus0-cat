<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/entrant_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar with Back Arrow and Title -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/entrant_card_bg"
                android:layout_margin="16dp"
                android:padding="16dp"
                android:elevation="0dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/entrant_pill_bg"
                    android:padding="10dp"
                    android:src="@drawable/ic_arrow_back"
                    android:contentDescription="Back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:tint="@color/entrant_text_primary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Details"
                    android:textSize="20sp"
                    android:textColor="@color/entrant_text_primary"
                    android:fontFamily="@font/space_grotesk_semibold"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Event Poster Image - Larger to fit entire poster -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="4dp"
                app:cardCornerRadius="22dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/event_poster_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_image_mask"
                        android:contentDescription="Event Poster" />

                    <TextView
                        android:id="@+id/badge_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="16dp"
                        android:background="@drawable/entrant_badge_cyan"
                        android:text="Selected"
                        android:textColor="@color/entrant_text_primary"
                        android:textSize="12sp"
                        android:fontFamily="@font/space_grotesk_semibold"
                        android:visibility="gone" />
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- White Content Card -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/entrant_card_bg"
                    android:padding="20dp">

                    <!-- Event Title and QR Code Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/event_name_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Event Name"
                            android:textSize="24sp"
                            android:textColor="@color/entrant_text_primary"
                            android:fontFamily="@font/space_grotesk_semibold" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_show_qr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QR Code"
                            android:textAllCaps="false"
                            android:textColor="@color/entrant_text_primary"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:icon="@drawable/ic_qr_code_24"
                            app:iconSize="16dp"
                            app:iconTint="@color/entrant_text_primary"
                            android:insetTop="0dp"
                            android:insetBottom="0dp"
                            app:backgroundTint="@android:color/transparent"
                            app:strokeColor="@color/entrant_outline"
                            app:strokeWidth="1dp"
                            app:cornerRadius="12dp"
                            android:fontFamily="@font/space_grotesk_semibold" />
                    </LinearLayout>

                    <!-- Organizer with icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="10dp"
                        android:layout_marginBottom="24dp"
                        android:background="@drawable/entrant_pill_bg">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_person_outline"
                            android:tint="@color/entrant_text_primary"
                            android:contentDescription="Organizer" />

                        <TextView
                            android:id="@+id/event_organizer_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="by Unknown"
                            android:textSize="14sp"
                            android:textColor="@color/entrant_text_primary"
                            android:fontFamily="@font/space_grotesk_semibold"
                            android:layout_marginStart="8dp" />

                    </LinearLayout>

                    <!-- Event Details Grid (2 columns, 3 rows) -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:layout_marginBottom="0dp">

                        <!-- Date Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/entrant_surface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_calendar_outline"
                                    android:tint="@color/entrant_accent"
                                    android:contentDescription="Date"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:textSize="12sp"
                                    android:textColor="@color/entrant_text_secondary"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                                <TextView
                                    android:id="@+id/event_date_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TBA"
                                    android:textSize="14sp"
                                    android:textColor="@color/entrant_text_primary"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Time Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/entrant_surface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_clock_outline"
                                    android:tint="@color/entrant_accent"
                                    android:contentDescription="Time"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time"
                                    android:textSize="12sp"
                                    android:textColor="@color/entrant_text_secondary"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                                <TextView
                                    android:id="@+id/event_time_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TBA"
                                    android:textSize="14sp"
                                    android:textColor="@color/entrant_text_primary"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Location Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/entrant_surface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                    <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_location"
                                    android:tint="@color/entrant_accent"
                        android:contentDescription="Location"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Location"
                                    android:textSize="12sp"
                                    android:textColor="@color/entrant_text_secondary"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                    <TextView
                        android:id="@+id/event_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                    android:text="TBA"
                                    android:textSize="14sp"
                        android:textColor="@color/entrant_text_primary"
                                    android:fontFamily="@font/space_grotesk_semibold"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:gravity="center" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Price Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/entrant_surface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_dollar"
                                    android:tint="@color/entrant_accent"
                                    android:contentDescription="Price"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Price"
                                    android:textSize="12sp"
                                    android:textColor="@color/entrant_text_secondary"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                                <TextView
                                    android:id="@+id/event_price_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Free"
                                    android:textSize="14sp"
                                    android:textColor="@color/entrant_text_primary"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Capacity Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/entrant_surface">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                    <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_people"
                                    android:tint="@color/entrant_accent"
                        android:contentDescription="Capacity"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Capacity"
                                    android:textSize="12sp"
                                    android:textColor="@color/entrant_text_secondary"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                    <TextView
                        android:id="@+id/event_capacity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                    android:text="Unlimited"
                                    android:textSize="14sp"
                                    android:textColor="@color/entrant_text_primary"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Waiting List Size Card (Right next to Capacity) -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/entrant_surface">

                            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_people"
                                    android:tint="@color/entrant_accent"
                                    android:contentDescription="Waiting List Size"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Waiting List"
                                    android:textSize="12sp"
                                    android:textColor="@color/entrant_text_secondary"
                                    android:layout_marginBottom="4dp"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                <TextView
                    android:id="@+id/waiting_list_count_text"
                                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="14sp"
                                    android:textColor="@color/entrant_text_primary"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>


                    <!-- Registration Timeline Card (Full Width) -->
                    <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="@color/entrant_surface">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                            android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_calendar_outline"
                                    android:tint="@color/entrant_accent"
                                    android:contentDescription="Registration Timeline"
                                    android:layout_marginEnd="12dp" />

                            <TextView
                                    android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Registration Timeline"
                                    android:textSize="14sp"
                                    android:textColor="@color/entrant_text_primary"
                                    android:fontFamily="@font/space_grotesk_semibold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Start"
                                        android:textSize="12sp"
                                        android:textColor="@color/entrant_text_secondary"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/space_grotesk_semibold" />

                            <TextView
                                        android:id="@+id/registration_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                        android:text="TBA"
                                        android:textSize="14sp"
                                android:textColor="@color/entrant_text_primary"
                                        android:fontFamily="@font/space_grotesk_semibold" />

                        </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="@color/entrant_outline"
                                    android:layout_marginHorizontal="16dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                        android:text="End"
                                        android:textSize="12sp"
                                        android:textColor="@color/entrant_text_secondary"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/space_grotesk_semibold" />

                                    <TextView
                                        android:id="@+id/registration_end_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="TBA"
                                        android:textSize="14sp"
                                        android:textColor="@color/entrant_text_primary"
                                        android:fontFamily="@font/space_grotesk_semibold" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Description Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                            android:textSize="16sp"
                            android:textColor="@color/entrant_text_primary"
                            android:fontFamily="@font/space_grotesk_semibold"
                        android:layout_marginBottom="8dp" />

                        <TextView
                        android:id="@+id/event_description_text"
                        android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        android:text="No description available."
                        android:textSize="14sp"
                        android:textColor="@color/entrant_text_secondary"
                        android:fontFamily="@font/space_grotesk"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                        <!-- Join Waiting List Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/join_waiting_list_button"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:text="Join Waiting List"
                            android:textSize="16sp"
                        android:textColor="@color/entrant_text_primary"
                        android:fontFamily="@font/space_grotesk_semibold"
                        android:background="@drawable/entrant_button_primary"
                        app:cornerRadius="16dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <!-- Invitation Actions (Hidden by default) -->
                    <include
                        android:id="@+id/invitation_include"
                        layout="@layout/entrant_inc_invitation_actions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"/>

                    <!-- Replacement Lottery Section (Hidden by default) -->
                    <LinearLayout
                        android:id="@+id/replacement_lottery_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="@drawable/entrant_card_bg"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        app:cardCornerRadius="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Another Chance Available! ðŸŽ²"
                            android:textSize="16sp"
                            android:textColor="@color/entrant_text_primary"
                            android:fontFamily="@font/space_grotesk_semibold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/replacement_lottery_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A spot has opened up! Join the waiting list for another chance to be selected."
                            android:textSize="14sp"
                            android:textColor="@color/entrant_text_secondary"
                            android:fontFamily="@font/space_grotesk"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnJoinReplacementLottery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Join Replacement Lottery"
                            android:textAllCaps="false"
                            android:fontFamily="@font/space_grotesk_semibold"
                            app:cornerRadius="14dp"
                            android:background="@drawable/entrant_button_primary"
                            android:textColor="@color/entrant_text_primary"
                            android:insetTop="0dp"
                            android:insetBottom="0dp" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
