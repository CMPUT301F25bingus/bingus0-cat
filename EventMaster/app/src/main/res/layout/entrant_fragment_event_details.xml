<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FB3AD">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar with Back Arrow and Title -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B8D9D8"
                android:padding="16dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Main Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Event Poster Image with Rounded Corners -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/poster_card"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/event_poster_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:background="#E3E8E8"
                        android:contentDescription="Event Poster" />

                </androidx.cardview.widget.CardView>

                <!-- Event Name and Favorite Icon -->
                <TextView
                    android:id="@+id/event_name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Swimming Lessons for Kids"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@id/poster_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btn_show_qr" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_show_qr"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="QR Code"
                    android:textAllCaps="false"
                    android:textColor="@color/teal_dark"
                    android:textSize="12sp"
                    app:icon="@drawable/ic_qr_code_24"
                    app:iconSize="16dp"
                    app:iconTint="@color/teal_dark"
                    app:backgroundTint="@android:color/white"
                    app:strokeColor="@color/teal_dark"
                    app:strokeWidth="1dp"
                    app:cornerRadius="8dp"
                    app:layout_constraintTop_toBottomOf="@id/poster_card"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Hosted By -->
                <TextView
                    android:id="@+id/event_organizer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hosted by: South Community Centre"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/event_name_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Info Row: Price, Location, Capacity -->
                <LinearLayout
                    android:id="@+id/info_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="start"
                    app:layout_constraintTop_toBottomOf="@id/event_organizer_text"
                    app:layout_constraintStart_toStartOf="parent">

                    <!-- Price -->
                    <TextView
                        android:id="@+id/event_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$20"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:layout_marginEnd="24dp" />

                    <!-- Location Icon and Text -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_dialog_map"
                        android:contentDescription="Location"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/event_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="South Community"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="24dp" />

                    <!-- Capacity Icon and Text -->
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@android:drawable/ic_menu_sort_by_size"
                        android:contentDescription="Capacity"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="4dp" />

                    <TextView
                        android:id="@+id/event_capacity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="20"
                        android:textSize="16sp"
                        android:textColor="#000000"
                        android:layout_gravity="center_vertical" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:id="@+id/event_description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="This 6-week beginner program introduces basic swimming and water safety techniques. Participants will learn front and back floats, glides, and kicks. Please bring swimwear and goggles."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/info_row"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Waiting List Count -->
                <TextView
                    android:id="@+id/waiting_list_count_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="58 People have joined the waiting list"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="24dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/event_description_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Bottom Section with Dates and Button -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/bottom_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="#B8E6E3"
                    app:layout_constraintTop_toBottomOf="@id/waiting_list_count_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Registration Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_my_calendar"
                                android:contentDescription="Calendar"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/registration_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dec 15, 2024"
                                android:textSize="15sp"
                                android:textColor="#000000" />

                        </LinearLayout>

                        <!-- Event Duration -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="20dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@android:drawable/ic_menu_recent_history"
                                android:contentDescription="Time"
                                android:layout_marginEnd="8dp" />

                            <TextView
                                android:id="@+id/event_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jan 10 - Feb, 2025"
                                android:textSize="15sp"
                                android:textColor="#000000" />

                        </LinearLayout>

                        <!-- When invited they should still see event details and accept/decline-->
                        <include
                            android:id="@+id/invitation_include"
                            layout="@layout/entrant_inc_invitation_actions"
                            android:visibility="gone"/>

                        <!-- Replacement Lottery Section (shown when someone else declines) -->
                        <LinearLayout
                            android:id="@+id/replacement_lottery_section"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="16dp"
                            android:background="#FFF3E0"
                            android:layout_marginTop="16dp"
                            android:visibility="gone"
                            app:cardCornerRadius="12dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Another Chance Available! ðŸŽ²"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#E65100"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:id="@+id/replacement_lottery_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="A spot has opened up! Join the waiting list for another chance to be selected."
                                android:textSize="14sp"
                                android:textColor="#333333"
                                android:layout_marginBottom="12dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnJoinReplacementLottery"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Join Replacement Lottery"
                                android:textAllCaps="false"
                                app:cornerRadius="12dp"
                                app:backgroundTint="#FF9800"
                                android:textColor="#FFFFFF" />
                        </LinearLayout>

                        <!-- Join Waiting List Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/join_waiting_list_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Join Waiting List"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#3D8B87"
                            android:visibility="gone"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
