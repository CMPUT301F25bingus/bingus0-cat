<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar with Back Arrow and Title -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B8D9D8"
                android:padding="16dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Details"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Event Poster Image - Larger to fit entire poster -->
                    <ImageView
                        android:id="@+id/event_poster_image"
                        android:layout_width="match_parent"
                android:layout_height="400dp"
                        android:scaleType="centerCrop"
                        android:background="#E3E8E8"
                        android:contentDescription="Event Poster" />

            <!-- White Content Card -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Event Title and QR Code Button -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                    <TextView
                            android:id="@+id/event_name_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Event Name"
                            android:textSize="24sp"
                            android:textColor="#000000" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_show_qr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="QR Code"
                            android:textAllCaps="false"
                            android:textColor="@color/teal_dark"
                            android:textSize="12sp"
                            android:visibility="gone"
                            app:icon="@drawable/ic_qr_code_24"
                            app:iconSize="16dp"
                            app:iconTint="@color/teal_dark"
                            app:backgroundTint="@android:color/white"
                            app:strokeColor="@color/teal_dark"
                            app:strokeWidth="1dp"
                            app:cornerRadius="8dp" />
                    </LinearLayout>

                    <!-- Organizer with icon -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="24dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_person_outline"
                            android:tint="#666666"
                            android:contentDescription="Organizer" />

                        <TextView
                            android:id="@+id/event_organizer_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="by Unknown"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginStart="6dp" />

                    </LinearLayout>

                    <!-- Event Details Grid (2 columns, 3 rows) -->
                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="2"
                        android:rowCount="3"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="false"
                        android:layout_marginBottom="0dp">

                        <!-- Date Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_calendar_outline"
                                    android:tint="#666666"
                                    android:contentDescription="Date"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Date"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/event_date_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TBA"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Time Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_clock_outline"
                                    android:tint="#666666"
                                    android:contentDescription="Time"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Time"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/event_time_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="TBA"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Location Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                    <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_location"
                                    android:tint="#666666"
                        android:contentDescription="Location"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Location"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/event_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                    android:text="TBA"
                                    android:textSize="14sp"
                        android:textColor="#000000"
                                    android:maxLines="2"
                                    android:ellipsize="end"
                                    android:gravity="center" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Price Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_dollar"
                                    android:tint="#666666"
                                    android:contentDescription="Price"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Price"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/event_price_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Free"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Capacity Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                    <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_people"
                                    android:tint="#666666"
                        android:contentDescription="Capacity"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Capacity"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/event_capacity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                    android:text="Unlimited"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />

                </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Waiting List Size Card (Right next to Capacity) -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_margin="6dp"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="#F5F5F5">

                            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_people"
                                    android:tint="#666666"
                                    android:contentDescription="Waiting List Size"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Waiting List"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/waiting_list_count_text"
                                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:textSize="14sp"
                                    android:textColor="#000000" />

                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                    </GridLayout>


                    <!-- Registration Timeline Card (Full Width) -->
                    <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginBottom="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F5F5F5">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                            android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_calendar_outline"
                                    android:tint="#666666"
                                    android:contentDescription="Registration Timeline"
                                    android:layout_marginEnd="12dp" />

                            <TextView
                                    android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Registration Timeline"
                                    android:textSize="14sp"
                                android:textColor="#000000" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Start"
                                        android:textSize="12sp"
                                        android:textColor="#666666"
                                        android:layout_marginBottom="4dp" />

                            <TextView
                                        android:id="@+id/registration_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                        android:text="TBA"
                                        android:textSize="14sp"
                                android:textColor="#000000" />

                        </LinearLayout>

                                <View
                                    android:layout_width="1dp"
                                    android:layout_height="match_parent"
                                    android:background="#E0E0E0"
                                    android:layout_marginHorizontal="16dp" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                        android:text="End"
                                        android:textSize="12sp"
                                        android:textColor="#666666"
                                        android:layout_marginBottom="4dp" />

                                    <TextView
                                        android:id="@+id/registration_end_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="TBA"
                                        android:textSize="14sp"
                                        android:textColor="#000000" />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Description Section -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                            android:textSize="16sp"
                            android:textColor="#000000"
                        android:layout_marginBottom="8dp" />

                        <TextView
                        android:id="@+id/event_description_text"
                        android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                        android:text="No description available."
                        android:textSize="14sp"
                        android:textColor="#333333"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="24dp" />

                        <!-- Join Waiting List Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/join_waiting_list_button"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Join Waiting List"
                            android:textSize="16sp"
                        android:textColor="@android:color/white"
                        app:cornerRadius="12dp"
                        app:backgroundTint="#0F8A86"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone" />

                    <!-- Invitation Actions (Hidden by default) -->
                    <include
                        android:id="@+id/invitation_include"
                        layout="@layout/entrant_inc_invitation_actions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"/>

                    <!-- Replacement Lottery Section (Hidden by default) -->
                    <LinearLayout
                        android:id="@+id/replacement_lottery_section"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:background="#FFF3E0"
                        android:layout_marginBottom="16dp"
                        android:visibility="gone"
                        app:cardCornerRadius="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Another Chance Available! ðŸŽ²"
                            android:textSize="16sp"
                            android:textColor="#E65100"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/replacement_lottery_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="A spot has opened up! Join the waiting list for another chance to be selected."
                            android:textSize="14sp"
                            android:textColor="#333333"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnJoinReplacementLottery"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Join Replacement Lottery"
                            android:textAllCaps="false"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#FF9800"
                            android:textColor="#FFFFFF" />
                    </LinearLayout>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
