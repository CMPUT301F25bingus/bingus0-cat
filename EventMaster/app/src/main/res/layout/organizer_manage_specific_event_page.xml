<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FB3AD">

    <!-- MAIN SCROLLING CONTENT -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- TOP BAR -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B8D9D8"
                android:padding="16dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/header_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Details"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- MAIN CONTENT -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- POSTER -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/poster_card"
                    android:layout_width="0dp"
                    android:layout_height="220dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="3dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:id="@+id/event_poster_image"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:background="#E3E8E8" />

                        <ImageView
                            android:id="@+id/edit_poster_icon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="12dp"
                            android:background="@drawable/circle_white_bg"
                            android:clickable="true"
                            android:elevation="8dp"
                            android:focusable="true"
                            android:padding="6dp"
                            android:src="@android:drawable/ic_menu_edit"
                            app:tint="#021B18" />

                    </FrameLayout>

                </androidx.cardview.widget.CardView>


                <!-- TITLE -->
                <TextView
                    android:id="@+id/event_name_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Title"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/poster_card"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- ORGANIZER -->
                <TextView
                    android:id="@+id/event_organizer_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hosted by: Organizer Name"
                    android:textSize="14sp"
                    android:textColor="#444"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/event_name_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/event_type_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Type: "
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toTopOf="@+id/info_row"
                    app:layout_constraintTop_toBottomOf="@+id/event_organizer_text"
                    tools:ignore="MissingConstraints"
                    tools:layout_editor_absoluteX="20dp" />

                <!-- INFO ROW -->

                <!-- DESCRIPTION -->
                <LinearLayout
                    android:id="@+id/info_row"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:gravity="start"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/event_organizer_text">

                    <TextView
                        android:id="@+id/event_price_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="28dp"
                        android:text="$20"
                        android:textColor="#000"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/event_location_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="28dp"
                        android:text="ðŸ“ Location"
                        android:textColor="#000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/event_capacity_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ‘¥ 50"
                        android:textColor="#000"
                        android:textSize="16sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/event_description_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Description..."
                    android:textSize="14sp"
                    android:textColor="#333"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/info_row"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- DATE -->
                <TextView
                    android:id="@+id/event_date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“… Jan 1 â†’ Jan 7"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_marginTop="18dp"
                    app:layout_constraintTop_toBottomOf="@id/event_description_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- ACTION BUTTONS CARD -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/organizer_actions_card"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:layout_constraintTop_toBottomOf="@id/event_date_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewEntrants"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="ðŸ“‹ View Entrants"
                            android:textColor="#000"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#AA000000"
                            app:backgroundTint="#E8F0FF" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRunLottery"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="ðŸŽ² Run Lottery"
                            android:textColor="#000"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#AA000000"
                            app:backgroundTint="#FFF7D8" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnNotifications"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="ðŸ”” Notifications"
                            android:textColor="#000"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#AA000000"
                            app:backgroundTint="#F1E6FF" />


                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCancelEvent"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="âŒ Cancel Event"
                            android:textColor="#000"
                            android:textAllCaps="false"
                            app:cornerRadius="16dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#AA000000"
                            app:backgroundTint="#FFE4E4" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewMap"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="ðŸ—º View Entrant Map"
                            android:textAllCaps="false"
                            android:textColor="#000"
                            app:cornerRadius="16dp"
                            app:strokeWidth="1dp"
                            app:strokeColor="#AA000000"
                            app:backgroundTint="#DFF7FF"
                            android:visibility="gone"/>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </ScrollView>

    <!-- FRAGMENT OVERLAY (fixed placement) -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/transparent" />

</FrameLayout>
