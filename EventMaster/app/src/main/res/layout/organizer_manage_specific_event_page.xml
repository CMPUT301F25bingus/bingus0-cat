<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDE7E4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Teal Header Section (matching other pages) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#15837C"
                android:padding="20dp"
                android:paddingTop="40dp">

                <!-- Back button and title row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageButton
                        android:id="@+id/back_button"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_menu_revert"
                        android:contentDescription="Back"
                        android:padding="12dp"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Event Details"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Form Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- POSTER CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardUseCompatPadding="true">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/event_poster_image"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:scaleType="centerCrop"
                            android:background="#E3E8E8" />

                        <TextView
                            android:id="@+id/poster_placeholder_text"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:gravity="center"
                            android:text="No poster uploaded"
                            android:textSize="18sp"
                            android:textColor="#666666"
                            android:background="#E3E8E8" />

                        <ImageButton
                            android:id="@+id/edit_poster_icon"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="top|end"
                            android:layout_margin="12dp"
                            android:background="@drawable/edit_picture_button_background"
                            android:src="@android:drawable/ic_menu_edit"
                            android:contentDescription="Edit poster"
                            android:padding="8dp"
                            app:tint="@android:color/white" />
                    </FrameLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- EVENT INFO CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/event_name_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Event Title"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/event_organizer_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hosted by: Organizer Name"
                            android:textSize="14sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="12dp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="12dp" />

                        <!-- Info Grid -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Price"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/event_price_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$20"
                                    android:textColor="@android:color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Capacity"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="18dp"
                                        android:layout_height="18dp"
                                        android:src="@drawable/ic_people"
                                        android:contentDescription="People"
                                        android:layout_marginEnd="4dp" />

                                    <TextView
                                        android:id="@+id/event_capacity_text"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="50"
                                        android:textColor="@android:color/black"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/event_type_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type: Food"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/event_location_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- DESCRIPTION CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Description"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/black" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnEditDescription"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edit"
                                android:textAllCaps="false"
                                android:textColor="#15837C"
                                android:textSize="14sp"
                                android:minHeight="0dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp"
                                app:icon="@drawable/ic_edit_24"
                                app:iconSize="18dp"
                                app:iconTint="#15837C"
                                app:iconGravity="start" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/event_description_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Description..."
                            android:textSize="16sp"
                            android:textColor="#333333"
                            android:lineSpacingExtra="4dp"
                            android:visibility="visible" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/layoutDescription"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            app:boxBackgroundMode="outline"
                            app:boxBackgroundColor="@android:color/white"
                            app:boxStrokeColor="#15837C"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/editDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Enter description"
                                android:inputType="textMultiLine"
                                android:minLines="3"
                                android:maxLines="10"
                                android:textSize="16sp"
                                android:padding="16dp"
                                android:gravity="top|start" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <LinearLayout
                            android:id="@+id/descriptionEditButtons"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="12dp"
                            android:visibility="gone">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnCancelDescription"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:textAllCaps="false"
                                android:textColor="#666666"
                                android:textSize="14sp"
                                android:minHeight="0dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnSaveDescription"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Save"
                                android:textAllCaps="false"
                                android:textColor="#15837C"
                                android:textSize="14sp"
                                android:minHeight="0dp"
                                android:paddingStart="8dp"
                                android:paddingEnd="8dp" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- DATES CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dates"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="12dp" />

                        <!-- Registration Dates -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registration Period"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="8dp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="8dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Start"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/event_registration_start_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jan 1, 2025 at 12:00 PM"
                                    android:textSize="16sp"
                                    android:textColor="#333333" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="End"
                                    android:textSize="12sp"
                                    android:textColor="#666666"
                                    android:layout_marginBottom="4dp" />

                                <TextView
                                    android:id="@+id/event_registration_end_text"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Jan 7, 2025 at 11:59 PM"
                                    android:textSize="16sp"
                                    android:textColor="#333333" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#E0E0E0"
                            android:layout_marginBottom="12dp" />

                        <!-- Event Date -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Event Date &amp; Time"
                                android:textSize="12sp"
                                android:textColor="#666666"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:id="@+id/event_date_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nov 30, 2025 at 6:00 PM"
                                android:textSize="16sp"
                                android:textColor="#333333" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ACTION BUTTONS CARD -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardUseCompatPadding="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actions"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewEntrants"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="View Entrants"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#15837C"
                            app:icon="@android:drawable/ic_menu_view"
                            app:iconTint="@android:color/white"
                            app:iconGravity="start"
                            app:elevation="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRunLottery"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="Run Lottery"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#FFA726"
                            app:icon="@android:drawable/ic_menu_agenda"
                            app:iconTint="@android:color/white"
                            app:iconGravity="start"
                            app:elevation="2dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnViewMap"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="View Entrant Map"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#42A5F5"
                            app:icon="@android:drawable/ic_menu_mylocation"
                            app:iconTint="@android:color/white"
                            app:iconGravity="start"
                            app:elevation="2dp"
                            android:visibility="gone" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnDeleteEvent"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginTop="12dp"
                            android:text="Delete Event"
                            android:textAllCaps="false"
                            android:textColor="@android:color/white"
                            android:textSize="16sp"
                            app:cornerRadius="12dp"
                            app:backgroundTint="#F44336"
                            app:icon="@android:drawable/ic_menu_delete"
                            app:iconTint="@android:color/white"
                            app:iconGravity="start"
                            app:elevation="2dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- FRAGMENT OVERLAY -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:background="@android:color/transparent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
