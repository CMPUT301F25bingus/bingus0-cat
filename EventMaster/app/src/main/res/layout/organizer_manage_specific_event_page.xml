<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#5EC1B6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="682dp"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TOP BAR -->
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:navigationIcon="?attr/homeAsUpIndicator"
                    app:title="Back to All Events"
                    app:titleTextColor="@android:color/white" />

                <!-- TITLE -->
                <TextView
                    android:id="@+id/manageEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="#158482"
                    android:backgroundTint="#158482"
                    android:backgroundTintMode="src_atop"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Manage Event"
                    android:textColor="@android:color/black"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <!-- SUBTITLE -->
                <TextView
                    android:id="@+id/manageEventSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="Select an action:"
                    android:textColor="@android:color/black"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <!-- SECTION 1: ENTRANTS -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnViewEntrants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸ“‹ View Entrants"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="#D4E4F7"
                    app:cornerRadius="25dp"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

                <!-- SECTION 2: RUN LOTTERY -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRunLottery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸŽ² Run Lottery"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="#FFF4D4"
                    app:cornerRadius="25dp"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

                <!-- SECTION 3: NOTIFICATIONS -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnNotifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="ðŸ”” Notifications"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="#E3D7FF"
                    app:cornerRadius="25dp"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

                <!-- SECTION 4: EDIT EVENT -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnEditEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="âœï¸ Edit Event"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="#CDEAD2"
                    app:cornerRadius="25dp"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

                <!-- SECTION 5: CANCEL EVENT -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelEvent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="âŒ Cancel Event"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:backgroundTint="#F6D4C7"
                    app:cornerRadius="25dp"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>
</ScrollView>
