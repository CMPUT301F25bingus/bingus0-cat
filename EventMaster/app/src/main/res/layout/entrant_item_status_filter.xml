<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="22dp"
    app:cardBackgroundColor="@color/teal_light"
    app:strokeWidth="0dp">

    <LinearLayout
        android:id="@+id/status_chip_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="44dp"
        android:orientation="horizontal"
        android:paddingHorizontal="4dp"
        android:paddingVertical="4dp"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/status_chip_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_label_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textAllCaps="true"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status_count_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_status_badge"
                    android:minWidth="24dp"
                    android:minHeight="20dp"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:text="0"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/status_indicator_all"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="@color/teal_dark"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_chip_open"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_label_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Open"
                    android:textAllCaps="true"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status_count_open"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_status_badge"
                    android:minWidth="24dp"
                    android:minHeight="20dp"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:text="0"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/status_indicator_open"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="@color/teal_dark"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_chip_closed"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_label_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Closed"
                    android:textAllCaps="true"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status_count_closed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_status_badge"
                    android:minWidth="24dp"
                    android:minHeight="20dp"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:text="0"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/status_indicator_closed"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="@color/teal_dark"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/status_chip_done"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="6dp"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/status_label_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textAllCaps="true"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/status_count_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/bg_status_badge"
                    android:minWidth="24dp"
                    android:minHeight="20dp"
                    android:gravity="center"
                    android:paddingHorizontal="6dp"
                    android:text="0"
                    android:textColor="@color/text_secondary_dark"
                    android:textSize="12sp" />
            </LinearLayout>

            <View
                android:id="@+id/status_indicator_done"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="4dp"
                android:background="@color/teal_dark"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

