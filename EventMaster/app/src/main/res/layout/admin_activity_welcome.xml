<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/profile_bg">

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="WELCOME\nAdmin!" android:textAlignment="center"
        android:textSize="24sp" android:textColor="@android:color/black"
        android:textStyle="bold" android:gravity="center"
        android:layout_marginBottom="24dp"/>

    <ImageView
        android:layout_width="120dp" android:layout_height="120dp"
        android:src="@drawable/ic_admin_dashboard" android:contentDescription="Admin Icon"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Continue" android:textColor="@android:color/black"
        app:cornerRadius="20dp" app:backgroundTint="@color/profile_nav"
        android:layout_marginTop="24dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogout"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Log Out" android:textColor="@android:color/white"
        app:cornerRadius="20dp" app:backgroundTint="@color/btn_neutral"
        android:layout_marginTop="16dp"/>
</LinearLayout>
