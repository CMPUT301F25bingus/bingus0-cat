<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/organizer_bg_gradient">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Teal Header Section (matching Manage Events page) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/organizer_header_glow"
                android:padding="20dp"
                android:paddingTop="40dp">

                <!-- Back button and title row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@android:color/transparent"
                        android:src="@android:drawable/ic_menu_revert"
                        android:contentDescription="Back"
                        android:padding="12dp"
                        app:tint="@android:color/white" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Create Event"
                        android:textColor="@android:color/white"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <View
                        android:layout_width="48dp"
                        android:layout_height="48dp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Form Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

            <!-- EVENT NAME & POSTER SECTION -->
            <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/org_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:text="Event Name"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/org_text_primary"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="12dp"
                            app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@android:color/white"
                            app:boxStrokeColor="@color/org_accent"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                                android:hint="Enter event name"
                        android:inputType="textCapSentences"
                        android:maxLines="1"
                                android:minHeight="56dp"
                                android:padding="16dp"
                                android:textColor="@color/org_text_primary"
                                android:textSize="16sp" />
                </com.google.android.material.textfield.TextInputLayout>

                        <ImageButton
                            android:id="@+id/btnPickPoster"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/camera_button_background"
                            android:src="@android:drawable/ic_menu_camera"
                            android:contentDescription="Add poster image"
                            android:padding="16dp"
                            android:scaleType="fitCenter"
                            app:tint="@android:color/white" />
                    </LinearLayout>

                    <!-- Poster Preview -->
                    <ImageView
                        android:id="@+id/imgPosterPreview"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="12dp"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        android:background="#F5F5F5"
                        android:contentDescription="Poster preview"
                        android:visibility="gone"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DESCRIPTION SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/org_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Description"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/org_text_primary"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@color/org_accent"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                            android:hint="Enter event description"
                        android:inputType="textMultiLine"
                            android:minLines="3"
                            android:maxLines="10"
                            android:scrollbars="vertical"
                        android:gravity="top|start"
                            android:textColor="@color/org_text_primary"
                            android:textSize="16sp"
                            android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- LOCATION SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/org_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/org_text_primary"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@color/org_accent"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                            android:hint="Enter location"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                            android:textColor="@color/org_text_primary"
                            android:textSize="16sp"
                            android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CAPACITY SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/org_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Capacity"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/org_text_primary"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lottery Size"
                                android:textSize="14sp"
                                android:textColor="@color/org_text_secondary"
                                android:layout_marginBottom="8dp" />

                            <com.google.android.material.textfield.TextInputLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@android:color/white"
                                app:boxStrokeColor="@color/org_accent"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editCapacity"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                                    android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                                    android:textColor="@color/org_text_primary"
                                    android:textSize="16sp"
                                    android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Optional Waiting List Size"
                                android:textSize="14sp"
                                android:textColor="@color/org_text_secondary"
                                android:layout_marginBottom="8dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@android:color/white"
                                app:boxStrokeColor="@color/org_accent"
                                app:boxCornerRadiusTopStart="12dp"
                                app:boxCornerRadiusTopEnd="12dp"
                                app:boxCornerRadiusBottomStart="12dp"
                                app:boxCornerRadiusBottomEnd="12dp"
                                app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editWaitingListLimit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                                    android:hint="0"
                        android:inputType="number"
                        android:maxLines="1"
                                    android:textColor="@color/org_text_primary"
                                    android:textSize="16sp"
                                    android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PRICE & EVENT TYPE SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/org_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Price"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/org_text_primary"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@color/org_accent"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                        app:hintEnabled="false">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                            android:hint="0.00"
                        android:inputType="numberDecimal"
                        android:maxLines="1"
                            android:textColor="@color/org_text_primary"
                            android:textSize="16sp"
                            android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Type"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/org_text_primary"
                        android:layout_marginBottom="12dp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/eventTypeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                        app:boxBackgroundMode="outline"
                    app:boxBackgroundColor="@android:color/white"
                        app:boxStrokeColor="@color/org_accent"
                        app:boxCornerRadiusTopStart="12dp"
                        app:boxCornerRadiusTopEnd="12dp"
                        app:boxCornerRadiusBottomStart="12dp"
                        app:boxCornerRadiusBottomEnd="12dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/eventTypeDropdown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                            android:hint="Select event type"
                        android:inputType="none"
                        android:focusable="false"
                        android:textColor="@color/org_text_primary"
                            android:textSize="16sp"
                            android:padding="16dp"/>
                </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- DATES SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/org_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Registration Date"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/org_text_primary"
                        android:layout_marginBottom="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Start"
                                android:textSize="14sp"
                                android:textColor="@color/org_text_secondary"
                                android:layout_marginBottom="8dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/tvRegOpen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Select Date"
                    android:textAllCaps="false"
                    android:textColor="@color/org_text_primary"
                                android:minHeight="56dp"
                                app:backgroundTint="#F5F5F5"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_today"
                                app:iconTint="@color/org_accent"
                                app:iconGravity="start"
                                app:iconPadding="8dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/org_accent"
                                style="@style/Widget.Material3.Button.OutlinedButton"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="6dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="End"
                                android:textSize="14sp"
                                android:textColor="@color/org_text_secondary"
                                android:layout_marginBottom="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/tvRegClose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                                android:text="Select Date"
                                android:textAllCaps="false"
                                android:textColor="@color/org_text_primary"
                                android:minHeight="56dp"
                                app:backgroundTint="#F5F5F5"
                                app:cornerRadius="12dp"
                                app:icon="@android:drawable/ic_menu_today"
                                app:iconTint="@color/org_accent"
                                app:iconGravity="start"
                                app:iconPadding="8dp"
                                app:strokeWidth="1dp"
                                app:strokeColor="@color/org_accent"
                                style="@style/Widget.Material3.Button.OutlinedButton"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Event Date"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/org_text_primary"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/tvEventDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Select Date"
                    android:textAllCaps="false"
                    android:textColor="@color/org_text_primary"
                        android:minHeight="56dp"
                        app:backgroundTint="#F5F5F5"
                    app:cornerRadius="12dp"
                    app:icon="@android:drawable/ic_menu_today"
                        app:iconTint="@color/org_accent"
                        app:iconGravity="start"
                        app:iconPadding="8dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/org_accent"
                        style="@style/Widget.Material3.Button.OutlinedButton"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- OPTIONS SECTION -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/org_card">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cbGenerateQr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                            app:buttonTint="@color/org_accent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Generate QR Code"
                            android:textColor="@color/org_text_primary"
                            android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                        android:gravity="center_vertical">

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/cbRequireLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                            app:buttonTint="@color/org_accent" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Require geolocation on join"
                            android:textColor="@color/org_text_primary"
                            android:textSize="16sp"
                        android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- PUBLISH BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPublish"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                    android:text="Publish Event"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                android:textSize="18sp"
                android:padding="16dp"
                app:cornerRadius="16dp"
                app:backgroundTint="@color/org_accent"
                app:elevation="4dp" />

                <ProgressBar
                    android:id="@+id/progress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>
            </LinearLayout>
        </LinearLayout>
</ScrollView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
