<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/org_card"
    app:strokeWidth="0dp">

    <LinearLayout
        android:id="@+id/events_filter_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="46dp"
        android:orientation="horizontal"
        android:paddingHorizontal="6dp"
        android:paddingVertical="6dp"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/events_filter_all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="4dp"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/events_label_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALL"
                    android:textAllCaps="true"
                    android:textColor="@color/org_text_primary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/events_count_all"
                    android:layout_width="28dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/organizer_badge_live"
                    android:gravity="center"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="0dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:ellipsize="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <View
                android:id="@+id/events_indicator_all"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/organizer_tab_indicator"
                android:visibility="visible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/events_filter_ongoing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="4dp"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/events_label_ongoing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ONGOING"
                    android:textAllCaps="true"
                    android:textColor="@color/org_text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/events_count_ongoing"
                    android:layout_width="28dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/organizer_badge_live"
                    android:gravity="center"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="0dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:ellipsize="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <View
                android:id="@+id/events_indicator_ongoing"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/organizer_tab_indicator"
                android:visibility="invisible" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/events_filter_ended"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="4dp"
            android:paddingVertical="6dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/events_label_ended"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ENDED"
                    android:textAllCaps="true"
                    android:textColor="@color/org_text_secondary"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="none"
                    android:singleLine="true" />

                <TextView
                    android:id="@+id/events_count_ended"
                    android:layout_width="28dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/organizer_badge_live"
                    android:gravity="center"
                    android:paddingHorizontal="4dp"
                    android:paddingVertical="0dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:ellipsize="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:includeFontPadding="false" />
            </LinearLayout>

            <View
                android:id="@+id/events_indicator_ended"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/organizer_tab_indicator"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
