<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5FB3AD">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Top Bar with Back Arrow and Title -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#B8D9D8"
                android:padding="16dp"
                android:elevation="4dp">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_revert"
                    android:contentDescription="Back"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Event Details (Admin View)"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/back_button"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Main Content -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <!-- Event Poster Image -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/poster_card"
                    android:layout_width="match_parent"
                    android:layout_height="240dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:id="@+id/event_poster_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:background="#E3E8E8"
                        android:contentDescription="Event Poster" />

                </androidx.cardview.widget.CardView>

                <!-- Event Name -->
                <TextView
                    android:id="@+id/event_name_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event Name"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/poster_card"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Organizer -->
                <TextView
                    android:id="@+id/event_organizer_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Organizer: Unknown"
                    android:textSize="13sp"
                    android:textColor="#666666"
                    android:layout_marginTop="4dp"
                    app:layout_constraintTop_toBottomOf="@id/event_name_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Event Date -->
                <TextView
                    android:id="@+id/event_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date: TBA"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/event_organizer_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Location -->
                <TextView
                    android:id="@+id/event_location_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location: TBA"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/event_date_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Price -->
                <TextView
                    android:id="@+id/event_price_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Price: Free"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/event_location_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Capacity -->
                <TextView
                    android:id="@+id/event_capacity_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Capacity: Unlimited"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/event_price_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Registration Deadline -->
                <TextView
                    android:id="@+id/registration_date_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Registration Deadline: TBA"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/event_capacity_text"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Description -->
                <TextView
                    android:id="@+id/event_description_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No description available."
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:lineSpacingExtra="2dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@id/registration_date_text"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

