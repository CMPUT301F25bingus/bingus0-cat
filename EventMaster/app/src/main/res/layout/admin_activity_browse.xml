<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/admin_bg"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp"
        android:animateLayoutChanges="true">

        <!-- White Card Container -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:cardCornerRadius="24dp"
            app:cardElevation="12dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/admin_surface">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="32dp"
                android:fontFamily="@font/manrope">

                <!-- Header Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Dashboard"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/admin_text_primary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Manage your platform"
                    android:textSize="16sp"
                    android:textColor="@color/admin_text_secondary"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="24dp" />

                <!-- Category Card 1: Manage Events -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardManageEvents"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/admin_surface"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <!-- Calendar Icon -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_calendar_outline"
                            android:contentDescription="Events icon"
                            app:tint="@color/admin_text_primary"
                            android:layout_marginEnd="16dp" />

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Manage Events"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/admin_text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Browse, view, and remove events and their images"
                                android:textSize="14sp"
                                android:textColor="@color/admin_text_secondary" />
                        </LinearLayout>

                        <!-- Count Badge -->
                        <TextView
                            android:id="@+id/tvEventsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/admin_accent"
                            android:background="@drawable/bg_count_badge"
                            android:layout_marginStart="12dp"
                            android:minWidth="42dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="6dp"
                            android:gravity="center" />
                </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Category Card 2: Users & Organizers -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardUsersOrganizers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/admin_surface"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <!-- People Icon -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_people_outline"
                            android:contentDescription="Users icon"
                            app:tint="@color/admin_text_primary"
                            android:layout_marginEnd="16dp" />

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Users &amp; Organizers"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/admin_text_primary"
                                android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Browse profiles, filter by role, and remove users"
                                android:textSize="14sp"
                                android:textColor="@color/admin_text_secondary" />
                        </LinearLayout>

                        <!-- Count Badge -->
                        <TextView
                            android:id="@+id/tvUsersCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.2K"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/admin_accent"
                            android:background="@drawable/bg_count_badge"
                            android:layout_marginStart="12dp"
                            android:minWidth="42dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="6dp"
                            android:gravity="center" />
    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Category Card 3: Review Applications -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardReviewApplications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="@color/admin_surface"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:padding="20dp">

                        <!-- Clipboard Icon -->
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/ic_clipboard_text_outline"
                            android:contentDescription="Applications icon"
                            app:tint="@color/text_primary_dark"
                            android:layout_marginEnd="16dp" />

                        <!-- Text Content -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:text="Review Applications"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/admin_text_primary"
                            android:layout_marginBottom="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                            android:text="Review and approve organizer applications"
                            android:textSize="14sp"
                            android:textColor="@color/admin_text_secondary" />
</LinearLayout>

                        <!-- Count Badge -->
                        <TextView
                            android:id="@+id/tvApplicationsCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/admin_accent"
                            android:background="@drawable/bg_count_badge"
                            android:layout_marginStart="12dp"
                            android:minWidth="42dp"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="6dp"
                            android:gravity="center" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Footer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="24dp"
            android:text="Secure admin access â€¢ EventMaster"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:alpha="0.9" />
    </FrameLayout>
</ScrollView>
