<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/profile_bg" android:padding="32dp">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="vertical" android:gravity="center"
        android:padding="24dp" android:background="@color/profile_nav"
        android:elevation="2dp" android:layout_margin="16dp" android:clipToOutline="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOrganizers"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Browse organizers" android:textColor="@android:color/white"
            app:cornerRadius="14dp" app:backgroundTint="@color/profile_button"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEvents"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Browse events" android:textColor="@android:color/white"
            app:cornerRadius="14dp" app:backgroundTint="@color/profile_button"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProfiles"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Browse profiles" android:textColor="@android:color/white"
            app:cornerRadius="14dp" app:backgroundTint="@color/profile_button"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnImages"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Browse images" android:textColor="@android:color/white"
            app:cornerRadius="14dp" app:backgroundTint="@color/profile_button"
            android:layout_marginBottom="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNotifications"
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:text="Notifications" android:textColor="@android:color/white"
            app:cornerRadius="14dp" app:backgroundTint="@color/profile_button"/>
    </LinearLayout>
</LinearLayout>
