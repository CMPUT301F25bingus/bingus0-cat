<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="24dp"
        android:paddingBottom="24dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Guidelines"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Before joining the waiting list, please read and accept:"
            android:textSize="14sp"
            android:textColor="#666666"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Scrollable Guidelines -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:maxHeight="400dp"
            android:fillViewport="false"
            android:scrollbars="vertical"
            android:fadeScrollbars="false"
            android:clipToPadding="false"
            android:paddingStart="0dp"
            android:paddingEnd="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="0dp"
                android:paddingEnd="0dp">

                <!-- Guideline Item 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="•"
                        android:textColor="#5FB3AD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="4dp"
                        android:singleLine="false"
                        android:text="Joining the waiting list does not guarantee event participation"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Guideline Item 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="•"
                        android:textColor="#5FB3AD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="4dp"
                        android:singleLine="false"
                        android:text="Selection uses a random lottery where all entrants have equal chances"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Guideline Item 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="•"
                        android:textColor="#5FB3AD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="4dp"
                        android:singleLine="false"
                        android:text="If selected, you'll receive an invitation and must respond within the specified time"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Guideline Item 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="•"
                        android:textColor="#5FB3AD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="4dp"
                        android:singleLine="false"
                        android:text="You must provide accurate information and comply with all event requirements"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Guideline Item 5 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="•"
                        android:textColor="#5FB3AD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="4dp"
                        android:singleLine="false"
                        android:text="The event organizer reserves the right to remove participants who violate guidelines"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Guideline Item 6 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginBottom="16dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="•"
                        android:textColor="#5FB3AD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="4dp"
                        android:singleLine="false"
                        android:text="Event details may change, and you will be notified of any updates"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

                <!-- Guideline Item 7 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:layout_marginBottom="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:gravity="center"
                        android:text="•"
                        android:textColor="#5FB3AD"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:lineSpacingExtra="4dp"
                        android:paddingStart="8dp"
                        android:paddingEnd="4dp"
                        android:singleLine="false"
                        android:text="By accepting, you confirm that you meet all eligibility requirements"
                        android:textColor="#333333"
                        android:textSize="13sp" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- Accept Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/guidelines_checkbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I have read and agree to the guidelines"
            android:textSize="15sp"
            android:textColor="#333333"
            android:paddingStart="0dp"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            app:buttonTint="#5FB3AD" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Cancel"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:backgroundTint="@android:color/transparent"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_accept"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:text="Accept"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                app:cornerRadius="12dp"
                app:backgroundTint="#5FB3AD"
                android:enabled="false" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>

