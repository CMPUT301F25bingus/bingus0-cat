<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="10dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="@color/admin_surface"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:fontFamily="@font/manrope">

        <!-- Poster / Thumbnail -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/poster_container"
            android:layout_width="120dp"
            android:layout_height="160dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/event_poster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#E3E8E8"
                android:contentDescription="Event poster" />

            <!-- Status Badge (Bottom Right) -->
            <TextView
                android:id="@+id/status_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:background="@drawable/bg_status_active"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Content -->
        <LinearLayout
            android:id="@+id/event_details"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/poster_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/event_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/admin_text_primary"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_calendar_outline"
                    android:contentDescription="Calendar"
                    app:tint="@color/admin_text_secondary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/event_date_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Event Date: TBA"
                    android:textSize="14sp"
                    android:textColor="@color/admin_text_secondary" />
            </LinearLayout>

            <!-- Registration Date -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_clock_outline"
                    android:contentDescription="Clock"
                    app:tint="@color/admin_text_secondary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/registration_deadline_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Registration: TBA"
                    android:textSize="14sp"
                    android:textColor="@color/admin_text_secondary" />
            </LinearLayout>

            <!-- Participants / Waitlist -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="6dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_people_outline"
                    android:contentDescription="People"
                    app:tint="@color/admin_text_secondary"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/joined_count_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Participants: 0"
                    android:textSize="14sp"
                    android:textColor="@color/admin_text_secondary" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/delete_event_button"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="12dp"
                android:text="Delete Event"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="@font/manrope"
                app:icon="@drawable/ic_trash"
                app:iconGravity="start"
                app:iconTint="@color/white"
                app:backgroundTint="@color/admin_danger"
                app:cornerRadius="14dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
