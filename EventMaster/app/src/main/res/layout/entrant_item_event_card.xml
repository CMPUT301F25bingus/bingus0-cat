<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginBottom="14dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/entrant_card_bg"
        android:padding="12dp">

        <!-- Image with badge overlay -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="142dp"
            android:background="@drawable/rounded_top_corners">

            <ImageView
                android:id="@+id/imgEventPoster"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="Event poster"
                android:background="@drawable/rounded_image_mask" />

            <!-- Status Badge Overlay (bottom-right) -->
            <TextView
                android:id="@+id/badge_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="10dp"
                android:background="@drawable/entrant_badge_cyan"
                android:text="On Waitlist"
                android:textColor="@color/entrant_text_primary"
                android:textSize="11sp"
                android:fontFamily="@font/space_grotesk_semibold"
                android:visibility="gone" />
        </FrameLayout>

        <!-- Content Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="6dp">

            <!-- Title and Category Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/txtEventTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="@color/entrant_text_primary"
                    android:textSize="18sp"
                    android:fontFamily="@font/space_grotesk_semibold"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/category_chip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:background="@drawable/entrant_pill_bg"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Music"
                    android:textColor="@color/entrant_text_primary"
                    android:textSize="10sp"
                    android:fontFamily="@font/space_grotesk_semibold"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- Description -->
            <TextView
                android:id="@+id/txtDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="@color/entrant_text_secondary"
                android:textSize="12sp"
                android:fontFamily="@font/space_grotesk"
                android:maxLines="2"
                android:ellipsize="end"
                android:visibility="gone" />

            <!-- Metadata Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp">

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/icon_location"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_location"
                        app:tint="@color/entrant_accent"
                        android:contentDescription="Location" />

                    <TextView
                        android:id="@+id/txtEventLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/entrant_text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/space_grotesk"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <!-- Dates -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="4dp">

                    <ImageView
                        android:id="@+id/icon_calendar"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_calendar"
                        app:tint="@color/entrant_accent"
                        android:contentDescription="Date" />

                    <TextView
                        android:id="@+id/txtEventDates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/entrant_text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/space_grotesk" />
                </LinearLayout>

                <!-- Waiting List Count -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/icon_people"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_people"
                        app:tint="@color/entrant_accent"
                        android:contentDescription="Waiting list" />

                    <TextView
                        android:id="@+id/txtWaitingListCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="@color/entrant_text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/space_grotesk"
                        android:text="0 on waiting list" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
