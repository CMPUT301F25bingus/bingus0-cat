<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Filter Events"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="20dp" />

        <!-- Sort by Date -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sort by Date"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="8dp" />
        
        <RadioGroup
            android:id="@+id/radioGroupSort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <RadioButton
                android:id="@+id/radioSortNewest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Newest First"
                android:textColor="@color/text_primary_dark"
                app:buttonTint="@color/teal_dark"
                android:checked="true" />
            <RadioButton
                android:id="@+id/radioSortOldest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oldest First"
                android:textColor="@color/text_primary_dark"
                app:buttonTint="@color/teal_dark" />
        </RadioGroup>

        <!-- Price Range -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price Range"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="8dp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            
            <TextView
                android:id="@+id/textPriceValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Max Price: $200+ (No limit)"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:gravity="center"
                android:layout_marginBottom="12dp" />
            
            <SeekBar
                android:id="@+id/seekBarPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="4"
                android:progress="4"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:thumbTint="@color/teal_dark"
                android:progressTint="@color/teal_dark" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$0"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_dark"
                    android:gravity="start" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$50"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_dark"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$100"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_dark"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$150"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_dark"
                    android:gravity="center" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$200+"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary_dark"
                    android:gravity="end" />
            </LinearLayout>
        </LinearLayout>

        <!-- Location Filter -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="8dp" />
        
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Filter by location"
            android:layout_marginBottom="20dp"
            app:boxStrokeColor="@color/teal_dark"
            app:hintTextColor="@color/teal_dark"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:textColor="@color/text_primary_dark" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Event Type Filter -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Event Type"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary_dark"
            android:layout_marginBottom="8dp" />
        
        <!-- Event Type Selector Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select event types"
            android:layout_marginBottom="8dp"
            app:boxStrokeColor="@color/teal_dark"
            app:hintTextColor="@color/teal_dark"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/autoCompleteEventType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:clickable="true"
                android:text="All types"
                android:textColor="@color/text_primary_dark" />
        </com.google.android.material.textfield.TextInputLayout>
        
        <!-- Expandable Checkbox Section (hidden by default) - Clean list style -->
        <androidx.cardview.widget.CardView
            android:id="@+id/layoutEventTypes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="@android:color/white">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:maxHeight="300dp">
                
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeSports"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sports"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeFood"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Food"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeMusic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Music"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeEducation"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Education"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeWorkshop"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Workshop"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeVolunteer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Volunteer"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeSocial"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Social"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeFitness"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fitness"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeFamily"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Family"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeArtsCulture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Arts &amp; Culture"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                        
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/stroke" />
                        
                        <com.google.android.material.checkbox.MaterialCheckBox
                            android:id="@+id/checkTypeOther"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Other"
                            android:textColor="@color/text_primary_dark"
                            android:padding="8dp"
                            android:minHeight="48dp"
                            android:gravity="center_vertical"
                            app:buttonTint="@color/teal_dark" />
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnClearFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clear"
                android:textColor="@color/teal_dark"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_marginEnd="12dp" />
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApplyFilters"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply"
                android:textColor="@android:color/white"
                app:cornerRadius="8dp"
                app:backgroundTint="@color/teal_dark" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
