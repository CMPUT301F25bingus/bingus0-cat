<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/org_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Event Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="12dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tech Conference 2025"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/org_text_primary"
            android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDateLocation"
                android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="April 15, 2025 â€¢ San Francisco, CA"
            android:textSize="14sp"
            android:textColor="@color/org_text_secondary" />
        </LinearLayout>

        <!-- Status Badge -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Published"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:background="@drawable/bg_status_published"
            android:gravity="center"
            android:minWidth="70dp" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
