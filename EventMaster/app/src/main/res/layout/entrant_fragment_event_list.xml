<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#5FB3AD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Search Bar -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#D9E3E3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:gravity="center_vertical">

                <!-- Search Icon -->
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@android:drawable/ic_menu_search"
                    android:contentDescription="Search"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <!-- Search EditText -->
                <EditText
                    android:id="@+id/search_edit_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search events.."
                    android:textSize="16sp"
                    android:textColorHint="#888888"
                    android:background="@android:color/transparent"
                    android:padding="8dp"
                    android:inputType="text"
                    android:maxLines="1" />

                <!-- QR Scanner Button -->
                <ImageButton
                    android:id="@+id/qr_scanner_button"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_qr_scanner"
                    android:background="@drawable/qr_scanner_button_background"
                    android:padding="10dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Scan QR Code"
                    android:layout_marginEnd="4dp" />

                <!-- Filter Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/filter_button"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Filter"
                    android:textSize="14sp"
                    android:textColor="#000000"
                    android:backgroundTint="#FFFFFF"
                    app:cornerRadius="20dp"
                    android:layout_marginEnd="4dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


        <!-- Events RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/events_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="80dp"
            android:clipToPadding="false" />

        <!-- Empty State -->
        <TextView
            android:id="@+id/empty_state_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="No events available"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:visibility="gone" />

    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/CompactBottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/bottom_nav_background"
        app:elevation="4dp"
        app:itemIconTint="@color/bottom_nav_item_colors"
        app:itemTextColor="@color/bottom_nav_item_colors"
        app:labelVisibilityMode="labeled"
        app:itemIconSize="20dp"
        app:itemRippleColor="@android:color/transparent"
        app:itemTextAppearanceActive="@style/BottomNavTextStyle"
        app:itemTextAppearanceInactive="@style/BottomNavTextStyle"
        app:menu="@menu/bottom_nav_menu" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>



