<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="12dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="16dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="#5EC1B6">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- TOP BAR -->
                <com.google.android.material.appbar.MaterialToolbar
                    android:id="@+id/topBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    app:navigationIcon="?attr/homeAsUpIndicator"
                    app:title="Back Manage Event"
                    app:titleTextColor="@android:color/white" />

                <!-- PAGE TITLE -->
                <TextView
                    android:id="@+id/titleViewEntrants"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="View Entrants"
                    android:textSize="26sp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:background="#158482"
                    android:padding="8dp"
                    android:layout_marginBottom="16dp"
                    android:backgroundTintMode="src_atop"
                    android:backgroundTint="#158482" />

                <!-- SUBTITLE -->
                <TextView
                    android:id="@+id/Select"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select one of the following:"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="12dp" />

                <!-- WAITING LIST BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnWaitingList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“‹ Waiting List"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="25dp"
                    app:backgroundTint="#D4E4F7"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

                <!-- CHOSEN LIST BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChosenList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ¯ Chosen List"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="25dp"
                    app:backgroundTint="#FFF4D4"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

                <!-- SELECTED ENTRANTS BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnFinal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Selected Entrants âœ…"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp"
                    app:cornerRadius="25dp"
                    app:backgroundTint="#CDEAD2"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

                <!-- CANCELLED ENTRANTS BUTTON -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancelled"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cancelled Entrants âŒ"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    app:cornerRadius="25dp"
                    app:backgroundTint="#F6D4C7"
                    app:strokeColor="#22000000"
                    app:strokeWidth="1dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </FrameLayout>
</ScrollView>
