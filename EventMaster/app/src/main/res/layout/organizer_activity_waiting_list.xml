<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#A5D6D3">

    <!-- Back Button -->
    <TextView
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="â† Back to View Entrants"
        android:textColor="#000000"
        android:textSize="15sp"
        android:background="#D4E8E6"
        android:padding="16dp"
        android:gravity="start|center_vertical"
        android:clickable="true"
        android:focusable="true" />

    <!-- Section Header -->
    <TextView
        android:id="@+id/btnTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Waitlisted entrants"
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="16sp"
        android:background="#6CAAA1"
        android:padding="16dp"
        android:gravity="center"
        android:layout_marginTop="12dp" />

    <!-- RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWaitingList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="12dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:clipToPadding="false" />

    <!-- Footer -->
    <TextView
        android:id="@+id/textTotalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total waitlisted entrants: 0"
        android:layout_marginTop="8dp"
        android:textStyle="bold"
        android:textColor="#000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/textSendNotification"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send Notification ðŸ“©"
            android:textColor="#00796B"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textDrawReplacement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Run Lottery"
            android:textColor="#00796B"
            android:textStyle="italic"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>

</LinearLayout>
