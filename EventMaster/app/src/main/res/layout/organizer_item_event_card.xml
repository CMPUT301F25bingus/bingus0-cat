<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp"
    android:backgroundTint="@color/org_card"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- POSTER IMAGE -->
        <ImageView
            android:id="@+id/imgEventPoster"
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:layout_marginEnd="12dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/organizer_poster_placeholder"
            android:contentDescription="Event poster" />

        <!-- RIGHT SIDE CONTENT -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- TITLE -->
            <TextView
            android:id="@+id/txtEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/org_text_primary"
            android:textSize="17sp"
            android:maxLines="1"
            android:ellipsize="end" />

            <!-- LOCATION -->
            <TextView
            android:id="@+id/txtEventLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/org_text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="2dp"
            android:maxLines="1"
            android:ellipsize="end" />

            <!-- DATE RANGE -->
            <TextView
            android:id="@+id/txtEventDates"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/org_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

            <!-- CAPACITY -->
            <TextView
            android:id="@+id/txtEventCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/org_text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

            <!-- GEOLOCATION REQUIRED -->
            <TextView
                android:id="@+id/txtGeoRequired"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:text="Geolocation Required"
            android:textColor="@color/org_accent"
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
