<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F2F1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="32dp">

            <!-- App Icon Section -->
            <FrameLayout
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="24dp">

                <!-- Main Calendar Icon (Teal Gradient Background) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="8dp"
                    app:cardBackgroundColor="#5FB3AD">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_calendar_outline"
                        android:padding="24dp"
                        android:contentDescription="Calendar icon"
                        app:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Sparkle Overlay Icon (Purple, top-right) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="top|end"
                    android:layout_marginTop="-8dp"
                    android:layout_marginEnd="-8dp"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#6C5CE7">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_star_outline"
                        android:padding="12dp"
                        android:contentDescription="Sparkle icon"
                        app:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>
            </FrameLayout>

            <!-- Title and Subtitle -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EventMaster"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#111827"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="your fair shot at every event"
                android:textSize="16sp"
                android:textColor="#6B7280"
                android:layout_marginBottom="48dp" />

            <!-- Feature Pills (Upside-down triangle layout) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginBottom="40dp">

                <!-- First Row: Fair Lotteries and Easy Sign-up -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="8dp">

                    <!-- Fair Lotteries Pill -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#E8F5E9">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="#4CAF50"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fair Lotteries"
                                android:textSize="14sp"
                                android:textColor="#111827" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Easy Sign-up Pill -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="2dp"
                        app:cardBackgroundColor="#F3E5F5">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:paddingStart="12dp"
                            android:paddingEnd="12dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/circle_shape"
                                android:backgroundTint="#9C27B0"
                                android:layout_marginEnd="6dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Easy Sign-up"
                                android:textSize="14sp"
                                android:textColor="#111827" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>
                </LinearLayout>

                <!-- Second Row: Organized Events (centered below) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="#E3F2FD">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_shape"
                            android:backgroundTint="#2196F3"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Organized Events"
                            android:textSize="14sp"
                            android:textColor="#111827" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Illustrative Cards -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="60dp">

                <!-- People Card (Purple) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:layout_marginEnd="-20dp"
                    android:rotation="-8"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#F3E5F5">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_people_outline"
                        android:padding="20dp"
                        android:contentDescription="People icon"
                        app:tint="#9C27B0" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Calendar Card (Teal, larger) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginEnd="-20dp"
                    android:rotation="4"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#5FB3AD">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_calendar_outline"
                        android:padding="24dp"
                        android:contentDescription="Calendar icon"
                        app:tint="@android:color/white" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Sparkle Card (Yellow) -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="80dp"
                    android:layout_height="100dp"
                    android:rotation="-6"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="#FFF9C4">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_star_outline"
                        android:padding="20dp"
                        android:contentDescription="Sparkle icon"
                        app:tint="#F9A825" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <!-- Continue Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="Continue"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:drawableEnd="@drawable/ic_arrow_right"
                android:drawablePadding="8dp"
                app:cornerRadius="16dp"
                app:backgroundTint="#5FB3AD"
                app:elevation="4dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
