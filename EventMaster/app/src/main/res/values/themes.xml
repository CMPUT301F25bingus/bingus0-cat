<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.EventMaster" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.EventMaster" parent="Base.Theme.EventMaster" />
    
    <!-- Bottom Navigation Text Style -->
    <style name="BottomNavTextStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>
    
    <!-- Custom Bottom Navigation View Style -->
    <style name="CompactBottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:minHeight">0dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
    </style>

    <!-- Entrant typography helpers -->
    <style name="EntrantHeading">
        <item name="android:fontFamily">@font/space_grotesk_semibold</item>
        <item name="android:textColor">@color/entrant_text_primary</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="EntrantSubtitle">
        <item name="android:fontFamily">@font/space_grotesk</item>
        <item name="android:textColor">@color/entrant_text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EntrantLabelCaps">
        <item name="android:fontFamily">@font/space_grotesk_semibold</item>
        <item name="android:textColor">@color/entrant_text_secondary</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>
