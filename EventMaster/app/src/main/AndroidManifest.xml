<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EventMaster">

        <!-- Launcher for testing -->
        <activity
            android:name=".ui.admin.AdminWelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Admin hub -->
        <activity android:name=".ui.admin.AdminBrowseActivity" />

        <!-- Lists (Up → AdminBrowseActivity) -->
        <activity
            android:name=".ui.admin.profiles.BrowseOrganizersActivity"
            android:parentActivityName=".ui.admin.AdminBrowseActivity" />
        <activity
            android:name=".ui.admin.profiles.BrowseEntrantsActivity"
            android:parentActivityName=".ui.admin.AdminBrowseActivity" />

        <!-- Detail (Up → BrowseOrganizersActivity) -->
        <activity
            android:name=".ui.admin.profiles.AdminProfileDetailActivity"
            android:parentActivityName=".ui.admin.profiles.BrowseOrganizersActivity" />

        <!-- (Optional) Entrant profile flows you already had -->
        <activity android:name=".ui.profile.ProfileActivity" />
        <activity android:name=".ui.profile.EditProfileActivity" />

    </application>
</manifest>