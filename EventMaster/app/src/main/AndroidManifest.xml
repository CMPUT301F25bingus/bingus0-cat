<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Camera permission for QR code scanning -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.camera" android:required="false" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EventMaster">
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Authentication activities -->
        <activity
            android:name=".ui.auth.OrganizerLoginActivity"
            android:exported="false"
            android:label="Organizer Login" />
        <activity
            android:name=".ui.auth.AdminLoginActivity"
            android:exported="false"
            android:label="Admin Login" />
        <activity
            android:name=".ui.auth.CreateProfileActivity"
            android:exported="false"
            android:label="Create Profile" />

        <!-- Organizer flow -->
        <activity android:name=".ui.organizer.waitinglist.WaitingListActivity" android:exported="false" />
        <activity android:name=".ui.organizer.chosenlist.ChosenListActivity" android:exported="false" />
        <activity
            android:name=".ui.organizer.OrganizerHomeActivity"
            android:exported="false" />

        <!-- Entrant flow -->
        <activity
            android:name=".ui.entrant.EntrantHomeActivity"
            android:exported="false"
            android:label="Entrant Home" />
        <activity android:name=".ui.entrant.EventListActivity" android:exported="false"/>
        <activity android:name=".ui.entrant.EventDetailsActivity" android:exported="false"/>

        <!-- Added: Entrant Notifications -->
        <activity
            android:name=".ui.entrant.EntrantNotificationsActivity"
            android:exported="false"
            android:label="Notifications"
            android:parentActivityName=".MainActivity" />

        <!-- Admin flow -->
        <activity android:name=".ui.admin.AdminBrowseActivity" android:exported="false"/>
        <activity android:name=".ui.admin.AdminEventListActivity" android:exported="false"/>
        <activity android:name=".ui.admin.AdminWelcomeActivity" android:exported="false"/>

        <activity
            android:name=".ui.admin.profiles.BrowseOrganizersActivity"
            android:parentActivityName=".ui.admin.AdminBrowseActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.admin.profiles.BrowseEntrantsActivity"
            android:parentActivityName=".ui.admin.AdminBrowseActivity"
            android:exported="false"/>
        <activity
            android:name=".ui.admin.profiles.AdminProfileDetailActivity"
            android:parentActivityName=".ui.admin.profiles.BrowseOrganizersActivity"
            android:exported="false"/>

        <!-- organizer flow   -->
        <activity android:name=".ui.organizer.OrganizerManageEventsActivity" />
        <activity
            android:name=".ui.organizer.OrganizerCreateEventActivity"
            android:exported="false"
            android:label="Create Event" />

        <!-- Added: Selected Entrants -->
        <activity
            android:name=".ui.organizer.SelectedEntrantsActivity"
            android:exported="false"
            android:label="Selected Entrants"
            android:parentActivityName=".MainActivity" />

        <!-- QR scanner -->
        <activity
            android:name=".ui.qr.QRScannerActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>

        <!-- Shared profile screens -->
        <activity android:name=".ui.profile.ProfileActivity" android:exported="false"/>
        <activity android:name=".ui.profile.EditProfileActivity" android:exported="false"/>

    </application>

</manifest>
